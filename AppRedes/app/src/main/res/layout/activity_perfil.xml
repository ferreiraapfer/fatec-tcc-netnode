<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fatec.fernanda.appredes.activities.PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icone_usuario"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/email_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icone_usuario"
                android:paddingTop="30dp"
                android:text="fernanda@email.com"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nome_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_toRightOf="@id/icone_usuario"
                android:layout_below="@id/email_usuario"
                android:text="Fernanda Aparecida"
                android:textSize="20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp">

            <ImageView
                android:id="@+id/icone_progresso"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/progressoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/icone_progresso"
                android:lines="1"
                android:text="Progresso: "
                android:textColor="#000000"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progresso_barra"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/progressoTitle"
                android:max="100"
                android:progress="20" />

            <TextView
                android:id="@+id/progresso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/progresso_barra"
                android:layout_toRightOf="@id/progressoTitle"
                android:text="20%"
                android:textAlignment="center"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icone_conteudosConcluidos"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textConteudosConcluidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Conteúdos Concluídos"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icone_conteudosConcluidos"
                android:layout_toEndOf="@+id/icone_conteudosConcluidos"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/advanced_list_view"
            android:layout_width="match_parent"
            android:layout_height="250dp">
        </ListView>

    </LinearLayout>

</ScrollView>
