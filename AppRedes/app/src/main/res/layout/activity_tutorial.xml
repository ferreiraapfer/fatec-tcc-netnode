<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fatec.fernanda.appredes.activities.TutorialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TUTORIAL"
                android:textAlignment="center"
                android:textColor="@color/colorIcons"
                android:textSize="@dimen/h2_txt" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtIntro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/h2_txt"
            android:layout_margin="@dimen/default_layout_margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_layout_margin">

            <ImageView
                android:id="@+id/imgConteudos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_layout_margin"
                android:src="@mipmap/ic_conteudos" />

            <TextView
                android:id="@+id/txtConteudos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/h3_txt"
                android:layout_marginTop="@dimen/default_layout_margin"
                android:layout_toRightOf="@+id/imgConteudos" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_layout_margin">

            <ImageView
                android:id="@+id/imgTestes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_layout_margin"
                android:src="@mipmap/ic_testes" />

            <TextView
                android:id="@+id/txtTestes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h3_txt"
                android:layout_marginTop="@dimen/default_layout_margin"
                android:layout_toRightOf="@id/imgTestes" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_layout_margin">

            <ImageView
                android:id="@+id/imgRevisoes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_layout_margin"
                android:src="@mipmap/ic_revisoes" />

            <TextView
                android:id="@+id/txtRevisoes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/h3_txt"
                android:layout_marginTop="@dimen/default_layout_margin"
                android:layout_toRightOf="@+id/imgRevisoes" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
