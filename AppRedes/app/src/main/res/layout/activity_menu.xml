<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context="com.fatec.fernanda.appredes.activities.MenuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:popupTheme="@style/ActionBarPopUp"
        android:title=""
        android:subtitle=""
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/logo"
            android:text="NET"
            android:textAlignment="center"
            android:textColor="@color/colorIcons"
            android:textSize="@dimen/h1_txt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NODE"
            android:textAlignment="center"
            android:textColor="@color/colorIcons"
            android:textSize="@dimen/h1_txt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_layout_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_conteudos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_conteudos" />

        <TextView
            android:id="@+id/conteudosLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CONTEÚDOS"
            android:textAlignment="center"
            android:textSize="@dimen/h2_txt" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_layout_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_testes"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_conteudos" />

        <TextView
            android:id="@+id/testesLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="TESTES"
            android:textAlignment="center"
            android:textSize="@dimen/h2_txt" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_layout_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_revisoes"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_conteudos" />

        <TextView
            android:id="@+id/revisoesLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="REVISÕES"
            android:textAlignment="center"
            android:textSize="@dimen/h2_txt" />


    </LinearLayout>

</LinearLayout>
